<!DOCTYPE html>
<html>
  <head>
    <title>DevLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to image_tag("logo.png", class: "logo-img"), homepage %>
    <% if current_user %>
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search Library" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <% end %>
    <br>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
    <a class="navbar-brand" href="<%= root_url %>">Dev Library</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <% if current_user %>
          <li class="nav-item"><%= render partial: 'layouts/logged_in_links' %></li>
        <% else %>
          <li class="nav-item"><%= render partial: 'sessions/logged_out_links' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
