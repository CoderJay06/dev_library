<div class="books-index-container">
  <h1><%= display_books_heading(@book) %></h1>

  <ul class="books-index-list"><% @books.all.each do |book| %>
    <div class="books-index-card">
      <%= render 'book_li', book: book %>
    </div>
  </ul><% end %>
  <br>

  <% if admin? %>
    <%= button_to "Add book", new_admin_book_path, method: :get, class: "admin-link add-book" %>
    <%= button_to "Add author", new_admin_author_path, method: :get, class: "admin-link add-author" %>
    <%= button_to "Add category", new_admin_category_path, method: :get, class: "admin-link add-category" %>
  <% end %>
</div>