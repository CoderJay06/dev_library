<h1>Add a new book</h1>

<%= form_for(@book) do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>
   <br>
   <%= f.label :author %>
   <%= f.text_field :author %>
   <br>
   <%= f.label :description %>
   <%= f.text_area :description %>
   <br>
   <%= f.label :release_date %>
   <%= f.date_field :release_date %>
   <br>
   <%= f.collection_select :category_id, Category.all, :id, :name %>
   <%= f.submit "Add" %>
<% end %>