<h1>Write a review</h1>

<% if flash[:alert] %>
   <%= flash[:alert] %>
<% end %>
<%= form_for ([@book, @review]) do |f| %>
   <%= f.hidden_field :user_id %>
   <%= f.label :rating %>
   <%= f.number_field :rating %>
   <br>
   <%= f.label :comment %>
   <%= f.text_area :comment %>
   <br>
   <%= f.submit %>
<% end %>